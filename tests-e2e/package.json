{
  "name": "tests-e2e",
  "version": "1.0.0",
  "author": "",
  "description": "E2E tests for Quadratic",
  "main": "index.js",
  "scripts": {
    "docker:up": "docker compose up -d && sleep 3",
    "docker:down": "docker compose down",
    "lint:ts": "tsc --noemit",
    "test": "npm run lint:ts && npx playwright test",
    "test:ci": "npm run docker:up && npm run test && npm run docker:down",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:fix": "npx playwright test --update-snapshots",
    "test:report": "npx playwright show-report"
  },
  "keywords": [],
  "engines": {
    "node": "23.x"
  },
  "type": "module",
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.15.2",
    "typescript": "^5.8.2"
  }
}
